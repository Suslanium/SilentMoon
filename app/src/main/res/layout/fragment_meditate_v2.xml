<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:textAlignment="center"
    tools:context=".meditatev2.MeditateV2Fragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/meditate_v2_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:lineSpacingExtra="2sp"
            android:paddingTop="66dp"
            android:text="@string/meditate_v2_title"
            android:textColor="@color/primary_text"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/meditate_v2_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="4sp"
            android:text="@string/meditate_v2_subtitle"
            android:textAlignment="center"
            android:textColor="@color/light_gray"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meditate_v2_title" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/meditate_v2_multiselect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/meditate_v2_subtitle"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/multiselect_viewholder" />

        <RelativeLayout
            android:id="@+id/daily_calm_card"
            android:layout_width="0dp"
            android:layout_height="95dp"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="@dimen/margin_small"
            android:background="@drawable/topic_viewholder_bg"
            android:backgroundTint="@color/daily_calm_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/meditate_v2_multiselect">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"
                android:scaleType="fitXY"
                android:src="@drawable/daily_calm_bg" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/play_button_dark"
                android:importantForAccessibility="no" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="27dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:lineSpacingExtra="1sp"
                android:text="@string/daily_calm"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/daily_calm_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="27dp"
                android:fontFamily="@font/helvetica_neue_medium"
                android:letterSpacing="0.05"
                android:text="@string/apr_30"
                android:textColor="@color/gray"
                android:textSize="11sp" />

            <ImageView
                android:id="@+id/daily_calm_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/daily_calm_date"
                android:layout_alignBottom="@id/daily_calm_date"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/daily_calm_date"
                android:importantForAccessibility="no"
                android:src="@drawable/dot"
                android:tintMode="src_in"
                app:tint="@color/gray" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/daily_calm_date"
                android:layout_alignBottom="@+id/daily_calm_date"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/daily_calm_dot"
                android:fontFamily="@font/helvetica_neue_medium"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="1sp"
                android:text="@string/pause_practice"
                android:textColor="@color/gray"
                android:textSize="11sp" />
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/meditate_v2_recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="10dp"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/daily_calm_card"
            app:spanCount="2"
            tools:listitem="@layout/meditate_v2_viewholder" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>