<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/topic_holder_root"
        android:layout_width="@dimen/topic_item_width"
        android:layout_height="@dimen/topic_item_height"
        android:layout_marginStart="@dimen/topic_item_horizontal_margin"
        android:layout_marginEnd="@dimen/topic_item_horizontal_margin"
        android:layout_marginBottom="@dimen/margin_small"
        android:background="@drawable/topic_viewholder_bg"
        android:backgroundTint="@color/light_blue"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/topic_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:importantForAccessibility="no"
            android:scaleType="matrix"
            app:srcCompat="@drawable/topic_stress" />

        <TextView
            android:id="@+id/topic_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/helvetica_neue_roman"
            android:gravity="bottom|start"
            android:paddingStart="13dp"
            android:paddingEnd="13dp"
            android:paddingBottom="17dp"
            android:text="@string/topic_stress"
            android:textColor="@color/light_yellow"
            android:textSize="18sp"
            android:textStyle="bold" />
    </FrameLayout>

</FrameLayout>