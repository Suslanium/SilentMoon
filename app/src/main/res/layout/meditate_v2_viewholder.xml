<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="@dimen/margin_small"
    android:background="@drawable/topic_viewholder_bg"
    android:outlineProvider="background">

    <ImageView
        android:id="@+id/meditate_v2_holder_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:importantForAccessibility="no"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/meditate_card_one_bg" />

    <ImageView
        android:id="@+id/meditate_v2_holder_blur"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:importantForAccessibility="no"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/meditate_card_one_blur" />

    <TextView
        android:id="@+id/meditate_v2_holder_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/helvetica_neue_medium"
        android:lineSpacingExtra="1sp"
        android:text="@string/seven_days_of_calm"
        android:textColor="@color/white"
        android:maxLines="1"
        android:textSize="18sp"
        android:textStyle="bold" />
</FrameLayout>