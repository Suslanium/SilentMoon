<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_horizontal_margin"
    android:layout_marginEnd="@dimen/item_horizontal_margin"
    android:orientation="vertical">

    <com.google.android.material.chip.Chip
        android:id="@+id/multiselect_toggle"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:checkable="true"
        android:checked="false"
        android:foregroundGravity="center_horizontal"
        app:checkedIconVisible="false"
        app:chipBackgroundColor="@color/meditate_multiselect_bg"
        app:chipCornerRadius="25dp"
        app:chipEndPadding="@dimen/margin_small"
        app:chipIcon="@drawable/all_icon"
        app:chipIconSize="25sp"
        app:chipIconTint="@color/white"
        app:chipIconVisible="true"
        app:chipMinTouchTargetSize="0dp"
        app:chipStartPadding="@dimen/margin_small"
        app:chipStrokeWidth="0dp"
        app:closeIconVisible="false"
        app:textEndPadding="0dp"
        app:textStartPadding="0dp" />

    <TextView
        android:id="@+id/multiselect_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/helvetica_neue_medium"
        android:lineSpacingExtra="1sp"
        android:text="@string/meditate_v2_menu_all"
        android:textColor="@color/light_gray"
        android:textSize="16sp" />
</LinearLayout>